<h1>Posts</h1>

<br/>

<table class="table table-striped table-bordered table-hover flow">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Body</th>
      <th>Created By</th>
      <th>Show</th>
      <% if user_signed_in? %>
        <th>Edit</th>
        <th>Delete</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <% if post.user == current_user %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.description %></td>
          <td><%= post.body %></td>
          <td><%= post.user.username %></td>
          <!-- <td><%= post.user_id %></td> -->
          <td><%= link_to 'Show', post, class: "btn btn-outline-primary btn-sm" %></td>
          <% if user_signed_in? %>
            <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-outline-primary btn-sm"  %></td>
            <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>      
</table>

<br/>


<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path, class:"btn btn-secondary" %>
<% end %>

